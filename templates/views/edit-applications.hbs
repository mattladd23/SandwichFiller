{{>studentNavbar}}
    
    <div class="user-hero">
        <div class="student-applications-container">
            <h1>Edit or delete an application</h1>
            {{#if result}}          
            
                {{#each apps as |value key|}}
                                    
                <div class="card text-white mb-3" id="edit-card">
                    <div class="card-header">Created by: {{{value.f_name}}} {{{value.l_name}}}</div>
                    <div class="card-body">
                        <div class="edit-form-container">
                            <form action="/student/applications/edit/{{{value.app_id}}}?_method=PUT" method="POST">
                                <div class="row">                         
                                    <div class="card-info col-sm-6">
                                        <div class="row">
                                            <div class="col">
                                                <p class="card-text">Role / Programme:</p>                                    
                                                <textarea class="edit-textarea" name="editRole">{{{value.role}}}</textarea>
                                            </div>                                    
                                        </div>
                                        <div class="row">
                                            <div class="col">
                                                <p class="card-text">Organisation:</p>
                                                <textarea class="edit-textarea" name="editOrganisation">{{{value.organisation}}}</textarea>
                                            </div>                                    
                                        </div>
                                        <div class="row">
                                            <div class="col">
                                                <p class="card-text">City:</p>
                                                <textarea class="edit-textarea" name="editCity">{{{value.city}}}</textarea>
                                            </div>                                    
                                        </div>
                                        <div class="row">
                                            <div class="col">
                                                <p class="card-text">Country:</p>
                                                <textarea class="edit-textarea" name="editCountry">{{{value.country}}}</textarea>
                                            </div>                                    
                                        </div>                                
                                    </div>
                                    <div class="card-dates col-sm-6">
                                        <div class="row">
                                            {{!-- <p class="card-text">Application submitted: {{{value.app_date}}}</p> --}}
                                            <label for="editAppDate">Application submission date:</label>
                                            <div class="input-group date" id="app-datepicker">
                                                <input type="text" class="form-control" id="appdatepicker" name="editAppDate">
                                                <span class="input-group-append">
                                                    <span class="input-group-text bg-white">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <p class="card-text">Application deadline: {{{value.deadline}}}</p>
                                            <label for="editDeadline">Application deadline:</label>
                                            <div class="input-group date" id="dl-datepicker">
                                                <input type="text" class="form-control" id="dldatepicker" name="editDeadline">
                                                <span class="input-group-append">
                                                    <span class="input-group-text bg-white">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="row">                                    
                                            <label for="appstatus">Application status:</label>                    
                                            <select class="form-control" id="appstatus" name="editAppStatus">
                                                <option selected>{{{value.app_status}}}</option>
                                                <option>Interested</option>
                                                <option>Applied</option>
                                                <option>Online tests</option>
                                                <option>Assessment centre</option>
                                                <option>Interview</option>
                                                <option>Accepted</option>
                                                <option>Rejected</option>
                                            </select>
                                        </div>
                                        <div class="row">
                                            <p class="card-text">Description:</p>
                                            <textarea id="desc-textarea" name="editDescription">{{{value.description}}}</textarea>
                                        </div>                                
                                    </div>
                                </div>
                                <div class="edit-button-container">
                                    <button type="submit" class="btn btn-primary">Edit</button>
                                </div>
                            </form>
                        </div>
